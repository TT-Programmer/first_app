<%= javascript_include_tag 'edit_micropost', 'data-turbolinks-track' => true %>

<%= form_for(@micropost) do |f| %>
  <% if @micropost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@micropost.errors.count, "error") %> prohibited this micropost from being saved:</h2>

      <ul>
      <% @micropost.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= select :names, :id, @users.map{|t| [t.name, t.id]}, :selected => @users_selected %>
    <%= f.text_field :user_id, :style => "display:none" %>
  </div>
  <div class="actions">
    <%= f.submit :id => "micropost_edit_submit" %>
  </div>
<% end %>
